midwest <- as.data.frame(ggplot2::midwest)
midwest <- midwest %>% 
  mutate(child_percent = (poptotal-popadults)/poptotal * 100) %>% #전체 인구 대비 미성년 인구 백분율 변수 추가

midwest %>% 
  select(country, child_percent) %>% #country, child_percent라는 변수만 콘솔창에 출력함
  arrange(desc(child_percent)) %>%  #child_percent라는 변수를 기준으로 데이터프레임을 내림차순으로 재배열함
  head(5) #상위 5개의 데이터만 출력


midwest <- midwest %>% 
  mutate(child_rank = ifelse(child_percent >= 40, "large", 
                             ifelse(child_percent >= 30, "middle", "small"))) #미성년 비율 등급 변수 추가

table(midwest$child_rank) #각 등급에 몇 개의 지역이 있는지 조사

midwest %>% 
  mutate(pa_percent = popasian/poptotal*100) %>% #전체 인구 대비 아시아인 인구 백분율 변수 추가
  select(state, country, pa_percent) %>% #state, country, pa_percent라는 변수만 콘솔창에 출력함
  arrange(pa_percent) %>% #pa_percent를 기준으로 데이터프레임을 오름차순으로 재배열함
  head(10) #상위 10개의 데이터만 출력
